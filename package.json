{
  "name": "employee-mangement",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "npm run clear && tsc",
    "start": "node build/server.js",
    "debug": "nodemon --exec ts-node src/server.ts --inspect",
    "clear": "rm -rf build tsconfig.tsbuildinfo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format-check": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,mjs,cjs,css,scss,sass,md,html,json}\"",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,mjs,cjs,css,scss,sass,md,html,json}\"",
    "lint-staged": "npx lint-staged --concurrent false",
    "pretty-quick": "npx pretty-quick --staged",
    "prepare": "set NODE_ENV=development && rm -rf .husky && husky install && husky add .husky/pre-commit \"npm run lint-staged\" && husky add .husky/post-merge \"pnpm install\"",
    "swagger": "node ./src/docs/swagger.js"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run format",
      "npm run lint:fix",
      "npm run lint"
    ]
  },
  "author": "Prateek Lodhi",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "regenerator-runtime": "^0.14.1",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "errorhandler": "^1.5.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.5.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^8.0.0",
    "loadtest": "^8.0.6",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
