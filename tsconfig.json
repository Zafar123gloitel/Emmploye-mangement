{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "types": ["node"],
    "rootDir": "src",
    "outDir": "build",
    "pretty": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./build/*", "./dist/*"]
    }
  },
  "include": ["./src/**/*", "global.d.ts", "tsconfig-paths-register.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "tsconfig.tsbuildinfo",
    "build",
    "dist",
    "out",
    "logs",
    ".husky",
    ".vscode",
    ".idea",
    "public",
    "uploads"
  ]
}
